<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}Bootstrap Admin Template{% endblock %}</title>

    {% block stylesheets %}

        {% stylesheets
            'bundles/dashboard/css/bootstrap.min.css'
            'bundles/dashboard/css/sb-admin.css'
            'bundles/dashboard/css/plugins/morris.css'
            'bundles/dashboard/font-awesome/css/font-awesome.min.css'
        filter='cssrewrite' output='css/compiled/dashboard.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

    {% endblock %}

    {% block head_javascripts %}

        {% javascripts
        'bundles/dashboard/js/html5shiv.js'
        'bundles/dashboard/js/respond.min.js'
        output='js/compiled/ie.js' %}
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="{{ asset_url }}"></script>
        <![endif]-->
        {% endjavascripts %}
    {% endblock %}
</head>

    <body>
        <div id="wrapper">

                <!-- Navigation -->
                <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('dashboard') }}">Admin Dashboard</a>
                    </div>
                    <!-- Top Menu Items -->
                    <ul class="nav navbar-right top-nav">
                        {% block topnav %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> John Smith <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a href="#"><i class="fa fa-fw fa-user"></i> Profile</a>
                                </li>
                                <li>
                                    <a href="#"><i class="fa fa-fw fa-gear"></i> Settings</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="{{ path('logout') }}"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                                </li>
                            </ul>
                        </li>
                        {% endblock %}
                    </ul>
                    <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
                    <div class="collapse navbar-collapse navbar-ex1-collapse">
                        <ul class="nav navbar-nav side-nav">
                            {% block leftnav %}
                            <li class="{% if active == 'dashboard' %}active{% endif %}">
                                <a href="{{ path('dashboard') }}"><i class="fa fa-fw fa-dashboard"></i>Dashboard</a>
                            </li>
                            <li>
                                <a href="{{ path('dashboard_help') }}"><i class="glyphicon glyphicon-eye-open"></i>Help</a>
                            </li>
                            {% endblock %}
                        </ul>
                    </div>
                    <!-- /.navbar-collapse -->
                </nav>

                <div id="page-wrapper">

                    <div class="container-fluid">

                        {% block content %}{% endblock %}

                    </div>
                    <!-- /.container-fluid -->

                </div>
                <!-- /#page-wrapper -->

            </div>
        <!-- /#wrapper -->

        {% block javascripts %}
            {% javascripts
            'bundles/dashboard/js/jquery-2.1.4.min.js'
            'bundles/dashboard/js/bootstrap.min.js'
            'bundles/dashboard/js/plugins/morris/raphael.min.js'
            'bundles/dashboard/js/plugins/morris/morris.min.js'
            'bundles/dashboard/js/plugins/morris/morris-data.js'
            output='js/compiled/lib.js' %}
            <script src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>

</html>
