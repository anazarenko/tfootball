{% extends '@App/base.html.twig' %}

{% block title %} - Randomizer{% endblock %}

{% block content %}
    <h1>Randomizer</h1>
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            {{ form_start(randomForm) }}
            {{ form_widget(randomForm) }}
            <div style="margin-top: 20px;" class="btn btn-primary random-btn">Generate</div>
            <p class="randomizer-message"></p>
            {{ form_end(randomForm) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    'bundles/app/js/randomizer.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}