{% if games|length == 0 %}
    <li>
        <a href="#">
            <div>No matches for confirmation</div>
        </a>
    </li>
{% else %}
    {% for game in games %}
        <li>
            <a href="#">
                <div>
                    <span>{{ game.firstPlayer.username }}</span>
                    <span>{{ game.firstGoals }}</span>
                    <span>:</span>
                    <span>{{ game.secondGoals }}</span>
                    <span>{{ game.secondPlayer.username }}</span>
                    <span class="text-muted small">4 minutes ago</span>
                </div>
            </a>
        </li>
        {% if not loop.last %}
            <li class="divider"></li>
        {% endif %}
    {% endfor %}
{% endif %}