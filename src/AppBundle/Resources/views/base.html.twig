{% extends 'base.html.twig' %}

{% block title %} - Welcome!{% endblock %}

{% block stylesheets %}
    {% stylesheets
    'bundles/app/bootstrap/css/bootstrap.min.css'
    'bundles/app/fonts/font-awesome/css/font-awesome.min.css'
    'bundles/app/css/main.css'
    'bundles/app/less/main.less'
    filter='cssrewrite' output='css/compiled/app.css' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block body %}
    {% block header %}
        {% include '@App/header.html.twig' %}
    {% endblock %}
    <div class="container">
        {% block content %}{% endblock %}
    </div>

    <div id="notify" class="alert alert-success alert-dismissible fade in" role="alert">
        <button type="button" class="close"><span>Ã—</span></button>
        <p><strong>Success!</strong> New game was created. Wait for confirmation from other players.</p>
    </div>

{% endblock %}

{% block javascripts %}
    {% javascripts
    'bundles/app/js/jquery-2.1.4.min.js'
    'bundles/app/bootstrap/js/bootstrap.min.js'
    'bundles/app/js/main.js'
     output='js/compiled/lib.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
