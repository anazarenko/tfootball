{% extends 'AppBundle::base.html.twig' %}

{% block title %} - Players{% endblock %}

{% block content %}
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>First Player</th>
            <th>Score</th>
            <th>Second Player</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.xFirstPlayer.username }}</td>
                <td>{{ game.firstGoals }} - {{ game.secondGoals }}</td>
                <td>{{ game.yFirstPlayer.username }}</td>
                <td>{{ game.createdAt|date('H:i:s d-m-Y') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <input type="submit"/>
    {{ form_end(form) }}
{% endblock %}
