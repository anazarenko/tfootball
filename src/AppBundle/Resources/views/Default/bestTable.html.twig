{% if type == 'single' %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Player</th>
            <th>Won</th>
            <th>Drawn</th>
            <th>Lost</th>
            <th>%</th>
        </tr>
        </thead>
        <tbody>
        {% set break = false %}
        {% for row in bestTeams if row['team'].playerCount == 1 and not break %}
            <tr>
                <td>
                    <a class="team-link" href="{{ path('_profile_id', {'id' : row['team'].id}) }}">
                        {{ row['team']|members }}
                    </a>
                </td>
                <td>{{ row['won']|length }}</td>
                <td>{{ row['drawn']|length }}</td>
                <td>{{ row['lost']|length }}</td>
                <td>{{ row['wonPercent']|round }}%</td>
            </tr>
            {#{% if loop.index == 8 %}#}
                {#{% set break = true %}#}
            {#{% endif %}#}
        {% endfor %}
        </tbody>
    </table>
{% elseif type == 'double' %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th>Player</th>
            <th>Won</th>
            <th>Drawn</th>
            <th>Lost</th>
            <th>%</th>
        </tr>
        </thead>
        <tbody>
        {% set break = false %}
        {% for row in bestTeams if row['team'].playerCount == 2 and not break %}
            <tr>
                <td>{{ row['team']|members }}</td>
                <td>{{ row['won']|length }}</td>
                <td>{{ row['drawn']|length }}</td>
                <td>{{ row['lost']|length }}</td>
                <td>{{ row['wonPercent']|round }}%</td>
            </tr>
            {#{% if loop.index == 8 %}#}
                {#{% set break = true %}#}
            {#{% endif %}#}
        {% endfor %}
        </tbody>
    </table>
{% endif %}